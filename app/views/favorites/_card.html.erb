<div class="card mb-3">
  <h2 class="card-header h4">
    Favorite #<%= favorite.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd>
        <% if @favorite.user.present? %>
          <%= link_to favorite.user, favorite.user %>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>Garage</dt>
      <!-- Display garage_id start -->
      <dd>
        <% if @favorite.garage.present? %>
          <%= link_to favorite.garage, favorite.garage %>
        <% end %>
      </dd>
      <!-- Display garage_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back favorite, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link favorite start -->
      <div class="col">
        <%= link_to edit_favorite_url(favorite), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link favorite end -->

      <!-- Delete link favorite start -->
      <div class="col">
        <%= link_to favorite, method: :delete, data: { confirm: "Do you really want to delete this favorite?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link favorite end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(favorite.updated_at) %> ago
  </div>
</div>
