<%= search_form_for @q, :class => collapse_search_form, :id => "reservations_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :end_time, "End time" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='end_timegteqPicker' data-target-input="nearest">
          <%= f.text_field :end_time_gteq, :class => "form-control datetimepicker-input", :placeholder => "End time greater than or equal to", :data => {:target => '#end_timegteqPicker'} %>
          <div class="input-group-append" data-target='#end_timegteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#end_timegteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
      <div class='col-md-6'>
        <div class='input-group date' id='end_timelteqPicker' data-target-input="nearest">
          <%= f.text_field :end_time_lteq, :class => "form-control datetimepicker-input", :placeholder => "End time less than or equal to", :data => {:target => '#end_timelteqPicker'} %>
          <div class="input-group-append" data-target='#end_timelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#end_timelteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :start_date, "Start date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='start_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :start_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Start date greater than or equal to", :data => {:target => '#start_dategteqPicker'} %>
          <div class="input-group-append" data-target='#start_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='start_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :start_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Start date less than or equal to", :data => {:target => '#start_datelteqPicker'} %>
          <div class="input-group-append" data-target='#start_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#start_dategteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#start_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#start_dategteqPicker').on("dp.change", function (e) {
              $('#start_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#start_datelteqPicker').on("dp.change", function (e) {
              $('#start_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :lowest_height, "Garage Lowest height" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :garage_lowest_height_gteq, :class => "form-control", :placeholder => "Garage Lowest height greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :garage_lowest_height_lteq, :class => "form-control", :placeholder => "Garage Lowest height less than or equal to" %>
      </div>
    </div>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/reservations" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#reservations_filters">
  Show filters
</a>
