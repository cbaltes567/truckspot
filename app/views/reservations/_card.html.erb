<div class="card mb-3">
  <h2 class="card-header h4">
    Reservation #<%= reservation.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @reservation.user.present? %>
          <%= link_to reservation.user, reservation.user %>
        <% end %>
      </dd>

      <dt>Garage</dt>
      <dd>
        <% if @reservation.garage.present? %>
          <%= link_to reservation.garage, reservation.garage %>
        <% end %>
      </dd>

      <dt>Start date</dt>
      <dd><%= reservation.start_date %></dd>

      <dt>End time</dt>
      <dd><%= reservation.end_time %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back reservation, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @reservation.user %>
          <%= link_to edit_reservation_url(reservation), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @reservation.user %>
          <%= link_to reservation, method: :delete, data: { confirm: "Do you really want to delete this reservation?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(reservation.updated_at) %> ago
  </div>
</div>
