<div class="card mb-3">
  <h2 class="card-header h4">
    Vehicle #<%= vehicle.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Make</dt>
      <dd><%= vehicle.make %></dd>

      <dt>Model</dt>
      <dd><%= vehicle.model %></dd>

      <dt>Width</dt>
      <dd><%= vehicle.width %></dd>

      <dt>Height</dt>
      <dd><%= vehicle.height %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back vehicle, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_vehicle_url(vehicle), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to vehicle, method: :delete, data: { confirm: "Do you really want to delete this vehicle?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(vehicle.updated_at) %> ago
  </div>
</div>
