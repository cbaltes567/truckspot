<%= form_with(model: @vehicle_ownership, local: true) do |f| %>

  <%= f.hidden_field :vehicle_id, value: @vehicle.id %>

  <div class="form-group">
    <%= f.label :owner_id %>

    <%= f.collection_select :owner_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :license_plate_number %>

    <%= f.text_field :license_plate_number, class: "form-control" %>
  </div>

  <%= f.submit "Create vehicle ownership", class: "btn btn-block btn-outline-secondary" %>
<% end %>
