<!-- Form favorite start -->
<%= form_with(model: @favorite, local: true) do |f| %>
<!-- Form favorite end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for garage_id start -->
  <div class="form-group">
    <%= f.label :garage_id %>

    <!-- Input for garage_id start -->
    <%= f.collection_select :garage_id, Garage.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for garage_id end -->
  </div>
  <!-- Label and input for garage_id end -->

  <%= f.submit "Create favorite", class: "btn btn-block btn-outline-secondary" %>
<% end %>
