<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Vehicles

    <a data-toggle="collapse" href="#user_vehicles_new_form">
      Add vehicle ownership
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.vehicles.each do |vehicle_ownership| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to vehicle_ownership, vehicle_ownership %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_vehicles_new_form">
        <%= render partial: "users/user_vehicles_new_form" %>
      </div>
    </div>

  </ul>
</div>
