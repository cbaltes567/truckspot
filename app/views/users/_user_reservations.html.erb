<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Reservations

    <a data-toggle="collapse" href="#user_reservations_new_form">
      Add reservation
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.reservations.each do |reservation| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to reservation, reservation %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_reservations_new_form">
        <%= render partial: "users/user_reservations_new_form" %>
      </div>
    </div>

  </ul>
</div>
