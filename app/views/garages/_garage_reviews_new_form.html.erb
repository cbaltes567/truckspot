<!-- Form review start -->
<%= form_with(model: @review, local: true) do |f| %>
<!-- Form review end -->

  <!-- Label and input for reviewer_id start -->
  <div class="form-group">
    <%= f.label :reviewer_id %>

    <!-- Input for reviewer_id start -->
    <%= f.text_field :reviewer_id, class: "form-control" %>
    <!-- Input for reviewer_id end -->
  </div>
  <!-- Label and input for reviewer_id end -->

  <!-- Label and input for rating start -->
  <div class="form-group">
    <%= f.label :rating %>

    <!-- Input for rating start -->
    <%= f.text_field :rating, class: "form-control" %>
    <!-- Input for rating end -->
  </div>
  <!-- Label and input for rating end -->

  <!-- Label and input for review_body start -->
  <div class="form-group">
    <%= f.label :review_body %>

    <!-- Input for review_body start -->
    <%= f.text_field :review_body, class: "form-control" %>
    <!-- Input for review_body end -->
  </div>
  <!-- Label and input for review_body end -->

  <!-- Label and input for garage_id start -->
  <!-- Input for garage_id start -->
  <%= f.hidden_field :garage_id, value: @garage.id %>
  <!-- Input for garage_id end -->
  <!-- Label and input for garage_id end -->

  <%= f.submit "Create review", class: "btn btn-block btn-outline-secondary" %>
<% end %>
