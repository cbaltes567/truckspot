<%= form_with(model: @review, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :reviewer_id %>

    <%= f.collection_select :reviewer_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>

    <%= f.text_field :rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :review_body %>

    <%= f.text_field :review_body, class: "form-control" %>
  </div>

  <%= f.hidden_field :garage_id, value: @garage.id %>

  <%= f.submit "Create review", class: "btn btn-block btn-outline-secondary" %>
<% end %>
