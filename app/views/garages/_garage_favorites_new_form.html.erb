<!-- Form favorite start -->
<%= form_with(model: @favorite, local: true) do |f| %>
<!-- Form favorite end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <%= f.label :user_id %>

    <!-- Input for user_id start -->
    <%= f.text_field :user_id, class: "form-control" %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for garage_id start -->
  <!-- Input for garage_id start -->
  <%= f.hidden_field :garage_id, value: @garage.id %>
  <!-- Input for garage_id end -->
  <!-- Label and input for garage_id end -->

  <%= f.submit "Create favorite", class: "btn btn-block btn-outline-secondary" %>
<% end %>
