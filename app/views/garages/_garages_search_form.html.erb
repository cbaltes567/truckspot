<%= search_form_for @q, :class => collapse_search_form, :id => "garages_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :lowest_height, "Lowest height" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :lowest_height_gteq, :class => "form-control", :placeholder => "Lowest height greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :lowest_height_lteq, :class => "form-control", :placeholder => "Lowest height less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :parking_spot_width, "Parking spot width" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :parking_spot_width_gteq, :class => "form-control", :placeholder => "Parking spot width greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :parking_spot_width_lteq, :class => "form-control", :placeholder => "Parking spot width less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :cost_per_hour, "Cost per hour" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :cost_per_hour_gteq, :class => "form-control", :placeholder => "Cost per hour greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :cost_per_hour_lteq, :class => "form-control", :placeholder => "Cost per hour less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :users_email_cont, "Users email contains" %>
    <%= f.text_field :users_email_cont, :class => "form-control", :placeholder => "Users email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :reviewers_email_cont, "Reviewers email contains" %>
    <%= f.text_field :reviewers_email_cont, :class => "form-control", :placeholder => "Reviewers email contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/garages" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#garages_filters">
  Show filters
</a>
