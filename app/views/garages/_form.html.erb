<% was_validated = garage.errors.any? %>

<%= form_with(model: garage, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% garage_name_class = "form-control" %>
    <% garage_name_was_invalid = garage.errors.include?(:garage_name) %>

    <% if was_validated %>
      <% if garage_name_was_invalid %>
        <% garage_name_class << " is-invalid" %>
      <% else %>
        <% garage_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :garage_name %>
    <%= f.text_field :garage_name, class: garage_name_class, placeholder: "Enter garage name" %>
    <% if garage_name_was_invalid %>
      <% garage.errors.full_messages_for(:garage_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% maximum_height_class = "form-control" %>
    <% maximum_height_was_invalid = garage.errors.include?(:maximum_height) %>

    <% if was_validated %>
      <% if maximum_height_was_invalid %>
        <% maximum_height_class << " is-invalid" %>
      <% else %>
        <% maximum_height_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :maximum_height %>
    <%= f.text_field :maximum_height, class: maximum_height_class, placeholder: "Enter maximum height" %>
    <% if maximum_height_was_invalid %>
      <% garage.errors.full_messages_for(:maximum_height).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% maximum_width_class = "form-control" %>
    <% maximum_width_was_invalid = garage.errors.include?(:maximum_width) %>

    <% if was_validated %>
      <% if maximum_width_was_invalid %>
        <% maximum_width_class << " is-invalid" %>
      <% else %>
        <% maximum_width_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :maximum_width %>
    <%= f.text_field :maximum_width, class: maximum_width_class, placeholder: "Enter maximum width" %>
    <% if maximum_width_was_invalid %>
      <% garage.errors.full_messages_for(:maximum_width).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
