      <% else %>
        <% cost_per_hour_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :cost_per_hour %>
    <%= f.text_field :cost_per_hour, class: cost_per_hour_class, placeholder: "Enter cost per hour" %>
    <% if cost_per_hour_was_invalid %>
      <% garage.errors.full_messages_for(:cost_per_hour).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% garage_picture_class = "form-control" %>
    <% garage_picture_was_invalid = garage.errors.include?(:garage_picture) %>

    <% if was_validated %>
      <% if garage_picture_was_invalid %>
        <% garage_picture_class << " is-invalid" %>
      <% else %>
        <% garage_picture_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :garage_picture %>
    <%= f.file_field :garage_picture, class: "form-control" %>
    <% if garage_picture_was_invalid %>
      <% garage.errors.full_messages_for(:garage_picture).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% location_class = "form-control" %>
    <% location_was_invalid = garage.errors.include?(:location) %>

    <% if was_validated %>
      <% if location_was_invalid %>
        <% location_class << " is-invalid" %>
      <% else %>
        <% location_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :location %>
    <%= f.text_field :location, class: location_class, placeholder: "Enter location" %>
    <% if location_was_invalid %>
      <% garage.errors.full_messages_for(:location).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
